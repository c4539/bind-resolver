options {
        directory "/var/cache/bind";

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { any; };

        // Enable DNSSEC
        dnssec-enable yes;
        dnssec-validation auto;

        // Enable recursion and allow from any client
        recursion yes;
        allow-recursion { any; };
        allow-query { any; };
        allow-query-cache { any; };
};